<IfModule mod_rewrite.c>
<IfModule mod_negotiation.c>
    Options -MultiViews
</IfModule>

<IfModule mime_module>
    #AddHandler application/x-httpd-ea-php81 .php .php8 .phtml
    AddHandler application/x-httpd-php81 .php 
</IfModule>
RewriteEngine On

RewriteCond %{REQUEST_FILENAME} -d [OR]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ ^$1 [N]

RewriteCond %{REQUEST_URI} (\.\w+$) [NC]
RewriteRule ^(.*)$ public/$1

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ server.php
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On

 # Images
  ExpiresByType image/jpeg "access plus 10 year"
  ExpiresByType image/gif "access plus 10 year"
  ExpiresByType image/png "access plus 10 year"
  ExpiresByType image/webp "access plus 10 year"
  ExpiresByType image/svg+xml "access plus 10 year"
  ExpiresByType image/x-icon "access plus 10 year"

  # Video
  ExpiresByType video/webm "access plus 10 year"
  ExpiresByType video/mp4 "access plus 10 year"
  ExpiresByType video/mpeg "access plus 10 year"

  # Fonts
  ExpiresByType font/ttf "access plus 10 year"
  ExpiresByType font/otf "access plus 10 year"
  ExpiresByType font/woff "access plus 10 year"
  ExpiresByType font/woff2 "access plus 10 year"
  ExpiresByType application/font-woff "access plus 10 year"

  # CSS, JavaScript
  ExpiresByType text/css "access plus 10 year"
  ExpiresByType text/javascript "access plus 10 year"
  ExpiresByType application/javascript "access plus 10 year"

  # Others
  ExpiresByType application/pdf "access plus 10 year"
  ExpiresByType image/vnd.microsoft.icon "access plus 10 year"
</IfModule>

